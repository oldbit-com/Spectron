<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:OldBit.Spectron.Debugger.ViewModels.Overlays"
             x:DataType="viewModels:GoToAddressOverlayViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="OldBit.Spectron.Debugger.Controls.Overlays.GoToAddressOverlay">

    <Border Name="Overlay"
            IsVisible="False"
            Background="#80000000"
            ZIndex="1000">
        <Grid HorizontalAlignment="Center"
              VerticalAlignment="Center">

            <Border Width="200"
                    Padding="16"
                    CornerRadius="10"
                    Background="{DynamicResource ThemeBackgroundBrush}"
                    BorderBrush="{DynamicResource ThemeBorderMidBrush}"
                    BorderThickness="1">
                <StackPanel Spacing="10">
                    <TextBlock Text="Go to Address"
                               FontWeight="Bold"/>

                    <TextBox Name="AddressBox"
                             Text="{Binding Address}"/>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Spacing="8">
                        <Button Content="Cancel"
                                Command="{Binding HideCommand}"/>
                        <Button Content="Go"
                                Command="{Binding GoToCommand}"
                                IsEnabled="{Binding ElementName=AddressBox, Path=!(DataValidationErrors.HasErrors)}"/>
                    </StackPanel>
                </StackPanel>
            </Border>

        </Grid>
    </Border>

</UserControl>
