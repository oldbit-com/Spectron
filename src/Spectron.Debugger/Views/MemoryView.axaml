<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:OldBit.Spectron.Debugger.ViewModels"
        xmlns:overlays="clr-namespace:OldBit.Spectron.Debugger.Controls.Overlays"
        xmlns:hex="clr-namespace:OldBit.Spectron.Debugger.Controls.Hex"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="OldBit.Spectron.Debugger.Views.MemoryView"
        x:DataType="viewModels:MemoryViewModel"
        WindowStartupLocation="CenterOwner"
        Width="1200"
        Height="700"
        Title="Memory">

    <Window.KeyBindings>
        <KeyBinding Gesture="{OnPlatform Ctrl+G, macOS=Cmd+G}" Command="{Binding ShowGoToOverlayCommand}"/>
    </Window.KeyBindings>

    <Grid Margin="5" RowDefinitions="40,*">

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <TextBlock Text="Address" VerticalAlignment="Center"/>
            <TextBox
                BorderBrush="{x:Null}"
                Height="20"
                Padding="10 8 0 10"
                Text="23232"
                Width="100"  />
        </StackPanel>

        <hex:HexViewer
            Grid.Row="1"
            Name="MemoryViewer"
            BytesPerRow="32"
            GroupSize="8"
            Data="{Binding Memory}"/>

        <overlays:GoToAddressOverlay
            DataContext="{Binding GoToAddressOverlay}"
            Name="GoToAddressOverlay"
            Grid.Row="1"
            />

    </Grid>
</Window>
