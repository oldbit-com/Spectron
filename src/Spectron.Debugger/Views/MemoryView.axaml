<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:OldBit.Spectron.Debugger.ViewModels"
        xmlns:overlays="clr-namespace:OldBit.Spectron.Debugger.Controls.Overlays"
        xmlns:hex="clr-namespace:OldBit.Spectron.Debugger.Controls.Hex"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="OldBit.Spectron.Debugger.Views.MemoryView"
        x:DataType="viewModels:MemoryViewModel"
        WindowStartupLocation="CenterOwner"
        Width="1200"
        Height="700"
        Title="Memory">

    <Window.KeyBindings>
        <KeyBinding Gesture="{OnPlatform Ctrl+G, macOS=Cmd+G}" Command="{Binding GoToAddressCommand}"/>
    </Window.KeyBindings>

    <Grid Margin="5" RowDefinitions="30,*">
        <hex:HexViewer
            Grid.Row="1"
            Name="MemoryViewer"
            BytesPerRow="32"
            GroupSize="8"
            Data="{Binding Memory}"
        />

    <overlays:GoToAddressOverlay
        DataContext="{Binding GoToAddressOverlay}"
        Name="GoToAddressOverlay"
        Grid.Row="1"
        />

    </Grid>
</Window>
