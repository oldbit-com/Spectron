<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:zxSpectrum="clr-namespace:OldBit.ZXSpectrum"
             xmlns:spectral="clr-namespace:OldBit.Spectral"
             x:Class="OldBit.Spectral.App">

    <Application.DataTemplates>
        <spectral:ViewLocator/>
    </Application.DataTemplates>

    <Application.RequestedThemeVariant>
        <ThemeVariant>Dark</ThemeVariant>
    </Application.RequestedThemeVariant>

    <Application.Styles>
        <FluentTheme />
    </Application.Styles>
</Application>
