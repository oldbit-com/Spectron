<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:OldBit.Spectron.ViewModels.Debugger"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="450"
             x:DataType="viewModels:DebuggerCpuViewModel"
             xmlns:local="clr-namespace:OldBit.Spectron.Controls.Debugger"
             xmlns:converters="clr-namespace:OldBit.Spectron.Converters"
             x:Class="OldBit.Spectron.Controls.Debugger.Cpu">

    <UserControl.Resources>
        <converters:HexConverter x:Key="HexConverter"/>
    </UserControl.Resources>

    <Grid RowDefinitions="30,*">
        <Border Grid.Row="0" Grid.ColumnSpan="2" BorderBrush="{StaticResource TextControlBorderBrush}" BorderThickness="2">
            <TextBlock
                Text="CPU"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontFamily="{StaticResource SpectrumStrictFont}"
                FontSize="20"/>
        </Border>

        <Border Grid.Row="1" Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}">
            <Grid ColumnDefinitions="100,10,100" RowDefinitions="35,35,35,35,35,35,35,50" HorizontalAlignment="Center">
                <local:Register Grid.Column="0" Grid.Row="0" RegisterName="PC" Value="{Binding PC, Converter={StaticResource HexConverter}}"/>
                <local:Register Grid.Column="2" Grid.Row="0" RegisterName="SP" Value="{Binding SP, Converter={StaticResource HexConverter}}"/>

                <local:Register Grid.Column="0" Grid.Row="1" RegisterName="AF" Value="{Binding AF, Converter={StaticResource HexConverter}}"/>
                <local:Register Grid.Column="2" Grid.Row="1" RegisterName="AF'" Value="{Binding AFPrime, Converter={StaticResource HexConverter}}"/>

                <local:Register Grid.Column="0" Grid.Row="2" RegisterName="BC" Value="{Binding BC, Converter={StaticResource HexConverter}}"/>
                <local:Register Grid.Column="2" Grid.Row="2" RegisterName="BC'" Value="{Binding BCPrime, Converter={StaticResource HexConverter}}"/>

                <local:Register Grid.Column="0" Grid.Row="3" RegisterName="DE" Value="{Binding DE, Converter={StaticResource HexConverter}}"/>
                <local:Register Grid.Column="2" Grid.Row="3" RegisterName="DE'" Value="{Binding DEPrime, Converter={StaticResource HexConverter}}"/>

                <local:Register Grid.Column="0" Grid.Row="4" RegisterName="HL" Value="{Binding HL, Converter={StaticResource HexConverter}}"/>
                <local:Register Grid.Column="2" Grid.Row="4" RegisterName="HL'" Value="{Binding HLPrime, Converter={StaticResource HexConverter}}"/>

                <local:Register Grid.Column="0" Grid.Row="5" RegisterName="IX" Value="{Binding IX, Converter={StaticResource HexConverter}}"/>
                <local:Register Grid.Column="2" Grid.Row="5" RegisterName="IY" Value="{Binding IY, Converter={StaticResource HexConverter}}"/>

                <local:Register Grid.Column="0" Grid.Row="6" RegisterName="I" Value="{Binding I, Converter={StaticResource HexConverter}}"/>
                <local:Register Grid.Column="2" Grid.Row="6" RegisterName="R" Value="{Binding R, Converter={StaticResource HexConverter}}"/>

                <Grid Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="7" HorizontalAlignment="Center" Margin="0 10 0 0">
                    <local:FlagsRegister Flags="{Binding F}"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
