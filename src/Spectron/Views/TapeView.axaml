<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:OldBit.Spectron.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="300"
        x:Class="OldBit.Spectron.Views.TapeView"
        x:DataType="viewModels:TapeViewModel"
        WindowStartupLocation="CenterOwner"
        Title="Tape Browser">

    <Design.DataContext>
        <viewModels:TapeViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="*,40">
        <DataGrid Margin="20" ItemsSource="{Binding Blocks}"
                  IsReadOnly="True"
                  GridLinesVisibility="All"
                  CanUserSortColumns="False"
                  BorderThickness="1" BorderBrush="{StaticResource ButtonBorderBrush}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Tape Block" Binding="{Binding Name}" Width="250"/>
                <DataGridTextColumn Header="Data" Binding="{Binding Data}" />
            </DataGrid.Columns>
        </DataGrid>
        <Button Grid.Row="1" Content="Close" HorizontalAlignment="Right" HorizontalContentAlignment="Center" Margin="0 0 20 0" Width="100"/>
    </Grid>
</Window>
