<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:OldBit.Spectron.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="OldBit.Spectron.Views.DiskView"
        x:DataType="viewModels:DiskViewModel"
        Height="450" Width="600"
        WindowStartupLocation="CenterOwner"
        Title="Disk View">

    <Window.Styles>
        <Style Selector="TextBlock.ZX">
            <Setter Property="FontFamily" Value="{StaticResource SpectrumFont}"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="Auto,*,50" Margin="20 20 20 0">
        <Grid ColumnDefinitions="120,200,120,200,120,200" RowDefinitions="30,30,30">
            <TextBlock Grid.Row="0" Grid.Column="0" Classes="ZX" Text="Name:"/>
            <TextBlock Grid.Row="0" Grid.Column="1" Classes="ZX" Text="{Binding Name}"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Classes="ZX" Text="Tracks:"/>
            <TextBlock Grid.Row="1" Grid.Column="1" Classes="ZX" Text="{Binding NumberOfTracks}"/>
            <TextBlock Grid.Row="2" Grid.Column="0" Classes="ZX" Text="Sides:"/>
            <TextBlock Grid.Row="2" Grid.Column="1" Classes="ZX" Text="{Binding NumberOfSides}"/>

            <TextBlock Grid.Row="1" Grid.Column="2" Classes="ZX" Text="Files:"/>
            <TextBlock Grid.Row="1" Grid.Column="3" Classes="ZX" Text="{Binding NumberOfFiles}"/>
            <TextBlock Grid.Row="2" Grid.Column="2" Classes="ZX" Text="Deleted:"/>
            <TextBlock Grid.Row="2" Grid.Column="3" Classes="ZX" Text="{Binding NumberOfDeletedFiles}"/>
        </Grid>

        <DataGrid
            Grid.Row="1"
            Margin="0 10 0 10"
            Name="DataGrid"
            ItemsSource="{Binding Files}"
            IsReadOnly="True"
            GridLinesVisibility="All"
            CanUserSortColumns="False"
            CanUserResizeColumns="True"
            BorderThickness="2"
            BorderBrush="{DynamicResource DataGridGridLinesBrush}">

            <DataGrid.Styles>
                <Style Selector="DataGridCell:current /template/ Grid#FocusVisual">
                    <Setter Property="IsVisible" Value="false" />
                </Style>
            </DataGrid.Styles>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding FileName}" Width="200"/>
                <DataGridTextColumn Header="Type" Binding="{Binding FileType}" Width="80"/>
                <DataGridTextColumn Header="Length" Binding="{Binding Length}" Width="100"/>
                <DataGridTextColumn Header="Location" Binding="{Binding Address}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button
            Grid.Row="2"
            Width="80"
            HorizontalContentAlignment="Center"
            HorizontalAlignment="Right"
            Content="Close"
            Click="CloseButton_OnClick"/>
    </Grid>
</Window>
