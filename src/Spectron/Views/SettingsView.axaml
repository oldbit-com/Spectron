<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="OldBit.Spectron.Views.SettingsView"
        Title="SettingsView">
    <TabControl>
        <TabItem Header="Hardware">
            <Grid ColumnDefinitions="100, *" RowDefinitions="Auto,50">
                <TextBlock Text="Machine:" VerticalAlignment="Center" />
                <StackPanel Grid.Row="0" Grid.Column="1">
                    <RadioButton Content="ZX Spectrum 16k"/>
                    <RadioButton Content="ZX Spectrum 48k"/>
                    <RadioButton Content="ZX Spectrum 128k"/>
                </StackPanel>

                <CheckBox Grid.Column="1" Grid.Row="1" Content="Enable ULA plus"/>
            </Grid>
        </TabItem>
        <TabItem Header="ROM">
            <HeaderedItemsControl>

            </HeaderedItemsControl>
        </TabItem>
        <TabItem Header="Joystick">

        </TabItem>
    </TabControl>
</Window>
