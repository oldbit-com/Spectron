<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:debugger="clr-namespace:OldBit.Spectron.Controls.Debugger"
        xmlns:viewModels="clr-namespace:OldBit.Spectron.ViewModels.Debugger"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="OldBit.Spectron.Views.DebuggerView"
        x:DataType="viewModels:DebuggerViewModel"
        WindowStartupLocation="CenterOwner"
        Title="Debugger">

    <Window.Styles>
        <Style Selector="TextBox.Register">
            <Setter Property="FontFamily" Value="{StaticResource SpectrumStrictFont}"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Padding" Value="8 0 8 0"/>
            <Setter Property="Height" Value="30"/>

        </Style>
        <Style Selector="TextBlock.Register">
            <Setter Property="FontFamily" Value="{StaticResource SpectrumStrictFont}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="20"/>
        </Style>
        <Style Selector="TabItem">
            <Setter Property="MinHeight" Value="30"/>
        </Style>
        <Style Selector="TabItem > AccessText">
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="35,*, 200" ColumnDefinitions="240,120,*,240" Margin="5">
        <DockPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4">
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <Button Width="30" Height="30" Padding="4 0 0 0" Command="{Binding MainWindowViewModel.TogglePauseCommand}" IsVisible="{Binding !MainWindowViewModel.IsPaused}" HotKey="F8" ToolTip.Tip="Pause F8">
                    <Path Data="m6 19h4V5H6v14zm8-14v14h4V5h-4z" Fill="{StaticResource ButtonForeground}" Height="16" Width="16" Stretch="Uniform"/>
                </Button>
                <Button Width="30" Height="30" Padding="4 0 0 0" Command="{Binding DebuggerResumeCommand}" HotKey="F5" ToolTip.Tip="Resume (F5)" IsVisible="{Binding MainWindowViewModel.IsPaused}">
                    <Path Data="M8 5v14l11-7z" Fill="{StaticResource ButtonForeground}" Height="16" Width="16" Stretch="Uniform"/>
                </Button>
                <Button Width="30" Height="30" Padding="3 2 0 0" Command="{Binding DebuggerStepCommand}" HotKey="F10" ToolTip.Tip="Step (F10)" IsEnabled="{Binding MainWindowViewModel.IsPaused}">
                    <Path Data="m6 16H3c4-8 8-8 12 0h3l-4 5-4-5h3c-1-5-5-5-7 0Z" Fill="{StaticResource ButtonForeground}" Height="16" Width="20" Stretch="Uniform"/>
                </Button>
            </StackPanel>
            <Grid/>
        </DockPanel>

        <debugger:Cpu
            Grid.Row="1" Grid.Column="0"
            Margin="1"
            DataContext="{Binding CpuViewModel}"/>

        <debugger:Stack
            Grid.Row="1" Grid.Column="1"
            Margin="1"
            Height="250"
            VerticalAlignment="Top"
            DataContext="{Binding StackViewModel}"/>

        <debugger:CodeList
            Grid.Row="1" Grid.Column="2"
            Margin="1"
            DataContext="{Binding CodeListViewModel}"/>

        <debugger:Memory
            Grid.Row="1" Grid.Column="3"
            />

        <TabControl Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4">
            <TabItem Header="Immediate">
                <Grid RowDefinitions="*, Auto">
                    <TextBox Grid.Row="0" Margin="0 0 0 5" IsReadOnly="True"/>
                    <TextBox Grid.Row="1" HorizontalAlignment="Stretch" Height="30" VerticalAlignment="Bottom"/>
                </Grid>
            </TabItem>
            <TabItem Header="Breakpoints">

            </TabItem>
        </TabControl>
    </Grid>
</Window>
